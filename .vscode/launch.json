{
	"version": "0.2.0",
	"configurations": [
	  {
		"name": "C/C++ Runner: Debug Session",
		"type": "cppdbg",
		"request": "launch",
		"args": [],
		"stopAtEntry": false,
		"externalConsole": false,
		"cwd": "${workspaceFolder}",
		"program": "${workspaceFolder}/main",
		"MIMode": "gdb",
		"miDebuggerPath": "gdb",
		"setupCommands": [
		  {
			"description": "Enable pretty-printing for gdb",
			"text": "-enable-pretty-printing",
			"ignoreFailures": true
		  }
		],
		"preLaunchTask": "run the makefile"
	  }
	]
  }